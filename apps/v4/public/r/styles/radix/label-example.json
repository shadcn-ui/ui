{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "label-example",
  "type": "registry:example",
  "title": "Label",
  "registryDependencies": [
    "label"
  ],
  "files": [
    {
      "path": "registry/radix/examples/label-example.tsx",
      "content": "import { Checkbox } from \"@/registry/radix/ui/checkbox\"\nimport { Input } from \"@/registry/radix/ui/input\"\nimport { Label } from \"@/registry/radix/ui/label\"\nimport { Textarea } from \"@/registry/radix/ui/textarea\"\n\nexport default function LabelDemo() {\n  return (\n    <div className=\"flex h-full items-center justify-center\">\n      <div className=\"bg-background w-full max-w-[1500px] rounded-xl p-8\">\n        <div className=\"grid w-full max-w-sm gap-6\">\n          <div className=\"flex items-center gap-3\">\n            <Checkbox id=\"label-demo-terms\" />\n            <Label htmlFor=\"label-demo-terms\">\n              Accept terms and conditions\n            </Label>\n          </div>\n          <div className=\"grid gap-3\">\n            <Label htmlFor=\"label-demo-username\">Username</Label>\n            <Input id=\"label-demo-username\" placeholder=\"Username\" />\n          </div>\n          <div className=\"group grid gap-3\" data-disabled={true}>\n            <Label htmlFor=\"label-demo-disabled\">Disabled</Label>\n            <Input id=\"label-demo-disabled\" placeholder=\"Disabled\" disabled />\n          </div>\n          <div className=\"grid gap-3\">\n            <Label htmlFor=\"label-demo-message\">Message</Label>\n            <Textarea id=\"label-demo-message\" placeholder=\"Message\" />\n          </div>\n        </div>\n      </div>\n    </div>\n  )\n}\n",
      "type": "registry:example"
    }
  ]
}