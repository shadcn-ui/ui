{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "input-otp-example",
  "type": "registry:example",
  "title": "Input OTP",
  "registryDependencies": [
    "input-otp"
  ],
  "files": [
    {
      "path": "registry/radix-vega/examples/input-otp-example.tsx",
      "content": "\"use client\"\n\nimport * as React from \"react\"\nimport { REGEXP_ONLY_DIGITS, REGEXP_ONLY_DIGITS_AND_CHARS } from \"input-otp\"\n\nimport {\n  Field,\n  FieldDescription,\n  FieldError,\n  FieldLabel,\n} from \"@/registry/bases/radix/ui/field\"\nimport {\n  InputOTP,\n  InputOTPGroup,\n  InputOTPSeparator,\n  InputOTPSlot,\n} from \"@/registry/bases/radix/ui/input-otp\"\nimport Frame from \"@/app/(design)/design/components/frame\"\n\nexport default function InputOTPExample() {\n  return (\n    <div className=\"bg-background flex min-h-screen items-center justify-center p-6 lg:p-12\">\n      <div className=\"flex w-full max-w-lg flex-col gap-12\">\n        <InputOTPSimple />\n        <InputOTPPattern />\n        <InputOTPAlphanumeric />\n        <InputOTPWithSeparator />\n        <InputOTPWithSpacing />\n        <InputOTPDisabled />\n        <InputOTPError />\n        <InputOTPFourDigits />\n      </div>\n    </div>\n  )\n}\n\nfunction InputOTPSimple() {\n  return (\n    <Frame title=\"Simple\">\n      <Field>\n        <FieldLabel htmlFor=\"simple\">Simple</FieldLabel>\n        <InputOTP id=\"simple\" maxLength={6}>\n          <InputOTPGroup>\n            <InputOTPSlot index={0} />\n            <InputOTPSlot index={1} />\n            <InputOTPSlot index={2} />\n          </InputOTPGroup>\n          <InputOTPSeparator />\n          <InputOTPGroup>\n            <InputOTPSlot index={3} />\n            <InputOTPSlot index={4} />\n            <InputOTPSlot index={5} />\n          </InputOTPGroup>\n        </InputOTP>\n      </Field>\n    </Frame>\n  )\n}\n\nfunction InputOTPPattern() {\n  return (\n    <Frame title=\"Digits Only\">\n      <Field>\n        <FieldLabel htmlFor=\"digits-only\">Digits Only</FieldLabel>\n        <InputOTP id=\"digits-only\" maxLength={6} pattern={REGEXP_ONLY_DIGITS}>\n          <InputOTPGroup>\n            <InputOTPSlot index={0} />\n            <InputOTPSlot index={1} />\n            <InputOTPSlot index={2} />\n            <InputOTPSlot index={3} />\n            <InputOTPSlot index={4} />\n            <InputOTPSlot index={5} />\n          </InputOTPGroup>\n        </InputOTP>\n      </Field>\n    </Frame>\n  )\n}\n\nfunction InputOTPWithSeparator() {\n  const [value, setValue] = React.useState(\"123456\")\n\n  return (\n    <Frame title=\"With Separator\">\n      <Field>\n        <FieldLabel htmlFor=\"with-separator\">With Separator</FieldLabel>\n        <InputOTP\n          id=\"with-separator\"\n          maxLength={6}\n          value={value}\n          onChange={setValue}\n        >\n          <InputOTPGroup>\n            <InputOTPSlot index={0} />\n            <InputOTPSlot index={1} />\n          </InputOTPGroup>\n          <InputOTPSeparator />\n          <InputOTPGroup>\n            <InputOTPSlot index={2} />\n            <InputOTPSlot index={3} />\n          </InputOTPGroup>\n          <InputOTPSeparator />\n          <InputOTPGroup>\n            <InputOTPSlot index={4} />\n            <InputOTPSlot index={5} />\n          </InputOTPGroup>\n        </InputOTP>\n      </Field>\n    </Frame>\n  )\n}\n\nfunction InputOTPWithSpacing() {\n  return (\n    <Frame title=\"With Spacing\">\n      <Field>\n        <FieldLabel htmlFor=\"with-spacing\">With Spacing</FieldLabel>\n        <InputOTP id=\"with-spacing\" maxLength={6}>\n          <InputOTPGroup className=\"gap-2 *:data-[slot=input-otp-slot]:rounded-md *:data-[slot=input-otp-slot]:border\">\n            <InputOTPSlot index={0} />\n            <InputOTPSlot index={1} />\n            <InputOTPSlot index={2} />\n            <InputOTPSlot index={3} />\n          </InputOTPGroup>\n        </InputOTP>\n      </Field>\n    </Frame>\n  )\n}\n\nfunction InputOTPAlphanumeric() {\n  return (\n    <Frame title=\"Alphanumeric\">\n      <Field>\n        <FieldLabel htmlFor=\"alphanumeric\">Alphanumeric</FieldLabel>\n        <FieldDescription>Accepts both letters and numbers.</FieldDescription>\n        <InputOTP\n          id=\"alphanumeric\"\n          maxLength={6}\n          pattern={REGEXP_ONLY_DIGITS_AND_CHARS}\n        >\n          <InputOTPGroup>\n            <InputOTPSlot index={0} />\n            <InputOTPSlot index={1} />\n            <InputOTPSlot index={2} />\n          </InputOTPGroup>\n          <InputOTPSeparator />\n          <InputOTPGroup>\n            <InputOTPSlot index={3} />\n            <InputOTPSlot index={4} />\n            <InputOTPSlot index={5} />\n          </InputOTPGroup>\n        </InputOTP>\n      </Field>\n    </Frame>\n  )\n}\n\nfunction InputOTPDisabled() {\n  return (\n    <Frame title=\"Disabled\">\n      <Field>\n        <FieldLabel htmlFor=\"disabled\">Disabled</FieldLabel>\n        <InputOTP id=\"disabled\" maxLength={6} disabled value=\"123456\">\n          <InputOTPGroup>\n            <InputOTPSlot index={0} />\n            <InputOTPSlot index={1} />\n            <InputOTPSlot index={2} />\n          </InputOTPGroup>\n          <InputOTPSeparator />\n          <InputOTPGroup>\n            <InputOTPSlot index={3} />\n            <InputOTPSlot index={4} />\n            <InputOTPSlot index={5} />\n          </InputOTPGroup>\n        </InputOTP>\n      </Field>\n    </Frame>\n  )\n}\n\nfunction InputOTPError() {\n  const [value, setValue] = React.useState(\"\")\n  const [error, setError] = React.useState(false)\n\n  React.useEffect(() => {\n    if (value.length === 6) {\n      setError(value !== \"123456\")\n    } else {\n      setError(false)\n    }\n  }, [value])\n\n  return (\n    <Frame title=\"With Validation\">\n      <Field>\n        <FieldLabel htmlFor=\"error\">With Validation</FieldLabel>\n        <InputOTP id=\"error\" maxLength={6} value={value} onChange={setValue}>\n          <InputOTPGroup>\n            <InputOTPSlot\n              index={0}\n              aria-invalid={error && value.length === 6}\n            />\n            <InputOTPSlot\n              index={1}\n              aria-invalid={error && value.length === 6}\n            />\n            <InputOTPSlot\n              index={2}\n              aria-invalid={error && value.length === 6}\n            />\n          </InputOTPGroup>\n          <InputOTPSeparator />\n          <InputOTPGroup>\n            <InputOTPSlot\n              index={3}\n              aria-invalid={error && value.length === 6}\n            />\n            <InputOTPSlot\n              index={4}\n              aria-invalid={error && value.length === 6}\n            />\n            <InputOTPSlot\n              index={5}\n              aria-invalid={error && value.length === 6}\n            />\n          </InputOTPGroup>\n        </InputOTP>\n        {error ? (\n          <FieldError\n            errors={[{ message: \"Invalid code. Please try again.\" }]}\n          />\n        ) : (\n          <FieldDescription>\n            Enter 123456 to see success state.\n          </FieldDescription>\n        )}\n      </Field>\n    </Frame>\n  )\n}\n\nfunction InputOTPFourDigits() {\n  return (\n    <Frame title=\"4 Digits\">\n      <Field>\n        <FieldLabel htmlFor=\"four-digits\">4 Digits</FieldLabel>\n        <FieldDescription>Common pattern for PIN codes.</FieldDescription>\n        <InputOTP id=\"four-digits\" maxLength={4} pattern={REGEXP_ONLY_DIGITS}>\n          <InputOTPGroup>\n            <InputOTPSlot index={0} />\n            <InputOTPSlot index={1} />\n            <InputOTPSlot index={2} />\n            <InputOTPSlot index={3} />\n          </InputOTPGroup>\n        </InputOTP>\n      </Field>\n    </Frame>\n  )\n}\n",
      "type": "registry:example"
    }
  ]
}