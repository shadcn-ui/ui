      "path": "registry/new-york-v4/examples/input-group-button-group.tsx",
      "content": "\"use client\"\n\nimport * as React from \"react\"\nimport {\n  IconBold,\n  IconFilter,\n  IconItalic,\n  IconSearch,\n  IconUnderline,\n} from \"@tabler/icons-react\"\nimport {\n  CalendarIcon,\n  FileTextIcon,\n  ImageIcon,\n  MoreHorizontalIcon,\n  VideoIcon,\n} from \"lucide-react\"\n\nimport { Button } from \"@/registry/new-york-v4/ui/button\"\nimport { ButtonGroup } from \"@/registry/new-york-v4/ui/button-group\"\nimport {\n  DropdownMenu,\n  DropdownMenuContent,\n  DropdownMenuItem,\n  DropdownMenuSeparator,\n  DropdownMenuTrigger,\n} from \"@/registry/new-york-v4/ui/dropdown-menu\"\nimport { Input } from \"@/registry/new-york-v4/ui/input\"\nimport {\n  InputGroup,\n  InputGroupAddon,\n  InputGroupButton,\n} from \"@/registry/new-york-v4/ui/input-group\"\nimport { Textarea } from \"@/registry/new-york-v4/ui/textarea\"\n\nexport default function InputGroupButtonGroup() {\n  const [searchCategory, setSearchCategory] = React.useState(\"All\")\n  const [activeFormat, setActiveFormat] = React.useState<string[]>([])\n\n  const toggleFormat = (format: string) => {\n    setActiveFormat((prev) =>\n      prev.includes(format)\n        ? prev.filter((f) => f !== format)\n        : [...prev, format]\n    )\n  }\n\n  return (\n    <div className=\"grid w-full max-w-sm gap-6\">\n      {/* Search bar with category filter buttons */}\n      <InputGroup>\n        <Input placeholder=\"Search products...\" />\n        <InputGroupAddon>\n          <IconSearch />\n        </InputGroupAddon>\n        <InputGroupAddon align=\"inline-end\">\n          <ButtonGroup>\n            <Button\n              variant={searchCategory === \"All\" ? \"default\" : \"outline\"}\n              size=\"sm\"\n              onClick={() => setSearchCategory(\"All\")}\n            >\n              All\n            </Button>\n            <Button\n              variant={searchCategory === \"Products\" ? \"default\" : \"outline\"}\n              size=\"sm\"\n              onClick={() => setSearchCategory(\"Products\")}\n            >\n              Products\n            </Button>\n            <Button\n              variant={searchCategory === \"Users\" ? \"default\" : \"outline\"}\n              size=\"sm\"\n              onClick={() => setSearchCategory(\"Users\")}\n            >\n              Users\n            </Button>\n          </ButtonGroup>\n        </InputGroupAddon>\n      </InputGroup>\n\n      {/* Text input with formatting button group */}\n      <InputGroup>\n        <Input placeholder=\"Enter formatted text...\" />\n        <InputGroupAddon align=\"inline-end\">\n          <ButtonGroup>\n            <InputGroupButton\n              variant={activeFormat.includes(\"bold\") ? \"default\" : \"outline\"}\n              size=\"icon\"\n              onClick={() => toggleFormat(\"bold\")}\n              aria-label=\"Bold\"\n            >\n              <IconBold />\n            </InputGroupButton>\n            <InputGroupButton\n              variant={activeFormat.includes(\"italic\") ? \"default\" : \"outline\"}\n              size=\"icon\"\n              onClick={() => toggleFormat(\"italic\")}\n              aria-label=\"Italic\"\n            >\n              <IconItalic />\n            </InputGroupButton>\n            <InputGroupButton\n              variant={\n                activeFormat.includes(\"underline\") ? \"default\" : \"outline\"\n              }\n              size=\"icon\"\n              onClick={() => toggleFormat(\"underline\")}\n              aria-label=\"Underline\"\n            >\n              <IconUnderline />\n            </InputGroupButton>\n          </ButtonGroup>\n        </InputGroupAddon>\n      </InputGroup>\n\n      {/* Search with advanced filters */}\n      <InputGroup>\n        <Input placeholder=\"Search with filters...\" />\n        <InputGroupAddon>\n          <IconSearch />\n        </InputGroupAddon>\n        <InputGroupAddon align=\"inline-end\">\n          <ButtonGroup>\n            <InputGroupButton variant=\"outline\" size=\"sm\">\n              <IconFilter />\n              Filters\n            </InputGroupButton>\n            <DropdownMenu>\n              <DropdownMenuTrigger asChild>\n                <InputGroupButton variant=\"outline\" size=\"icon\">\n                  <MoreHorizontalIcon />\n                </InputGroupButton>\n              </DropdownMenuTrigger>\n              <DropdownMenuContent align=\"end\">\n                <DropdownMenuItem>\n                  <CalendarIcon />\n                  Date Range\n                </DropdownMenuItem>\n                <DropdownMenuItem>\n                  <FileTextIcon />\n                  File Type\n                </DropdownMenuItem>\n                <DropdownMenuSeparator />\n                <DropdownMenuItem>Clear Filters</DropdownMenuItem>\n              </DropdownMenuContent>\n            </DropdownMenu>\n          </ButtonGroup>\n        </InputGroupAddon>\n      </InputGroup>\n\n      {/* File upload with action button group */}\n      <InputGroup>\n        <Input placeholder=\"Upload files...\" readOnly />\n        <InputGroupAddon align=\"inline-end\">\n          <ButtonGroup>\n            <InputGroupButton variant=\"outline\" size=\"sm\">\n              <ImageIcon />\n              Image\n            </InputGroupButton>\n            <InputGroupButton variant=\"outline\" size=\"sm\">\n              <VideoIcon />\n              Video\n            </InputGroupButton>\n            <InputGroupButton variant=\"outline\" size=\"sm\">\n              <FileTextIcon />\n              Document\n            </InputGroupButton>\n          </ButtonGroup>\n        </InputGroupAddon>\n      </InputGroup>\n\n      {/* Textarea with multiple button groups */}\n      <InputGroup>\n        <Textarea placeholder=\"Write your content...\" />\n        <InputGroupAddon align=\"block-end\">\n          <ButtonGroup>\n            <InputGroupButton variant=\"outline\" size=\"sm\">\n              Save Draft\n            </InputGroupButton>\n            <InputGroupButton variant=\"outline\" size=\"sm\">\n              Preview\n            </InputGroupButton>\n          </ButtonGroup>\n          <ButtonGroup className=\"ml-auto\">\n            <InputGroupButton variant=\"ghost\" size=\"sm\">\n              Cancel\n            </InputGroupButton>\n            <InputGroupButton variant=\"default\" size=\"sm\">\n              Publish\n            </InputGroupButton>\n          </ButtonGroup>\n        </InputGroupAddon>\n      </InputGroup>\n    </div>\n  )\n}",
      "type": "registry:example"
    }
  ]
}