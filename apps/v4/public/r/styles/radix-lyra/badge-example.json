    {
      "path": "registry/radix-lyra/examples/badge-example.tsx",
      "content": "import { Badge } from \"@/registry/bases/radix/ui/badge\"\nimport { Spinner } from \"@/registry/bases/radix/ui/spinner\"\nimport Frame from \"@/app/(design)/design/components/frame\"\nimport { IconPlaceholder } from \"@/app/(design)/design/components/icon-placeholder\"\n\nexport default function BadgeDemo() {\n  return (\n    <div className=\"bg-background flex min-h-screen items-center justify-center p-6 lg:p-12\">\n      <div className=\"flex w-full max-w-lg flex-col gap-12\">\n        <BadgeVariants />\n        <BadgeWithIconLeft />\n        <BadgeWithIconRight />\n        <BadgeWithSpinner />\n        <BadgeAsLink />\n        <BadgeLongText />\n        <BadgeCustomColors />\n      </div>\n    </div>\n  )\n}\n\nfunction BadgeVariants() {\n  return (\n    <Frame title=\"Variants\">\n      <div className=\"flex flex-wrap gap-2\">\n        <Badge>Default</Badge>\n        <Badge variant=\"secondary\">Secondary</Badge>\n        <Badge variant=\"destructive\">Destructive</Badge>\n        <Badge variant=\"outline\">Outline</Badge>\n        <Badge variant=\"ghost\">Ghost</Badge>\n        <Badge variant=\"link\">Link</Badge>\n      </div>\n    </Frame>\n  )\n}\n\nfunction BadgeWithIconLeft() {\n  return (\n    <Frame title=\"Icon Left\">\n      <div className=\"flex flex-wrap gap-2\">\n        <Badge>\n          <IconPlaceholder\n            lucide=\"BadgeCheck\"\n            tabler=\"IconRosetteDiscountCheck\"\n            hugeicons=\"CheckmarkBadge02Icon\"\n          />\n          Default\n        </Badge>\n        <Badge variant=\"secondary\">\n          <IconPlaceholder\n            lucide=\"BadgeCheck\"\n            tabler=\"IconRosetteDiscountCheck\"\n            hugeicons=\"CheckmarkBadge02Icon\"\n          />\n          Secondary\n        </Badge>\n        <Badge variant=\"destructive\">\n          <IconPlaceholder\n            lucide=\"BadgeCheck\"\n            tabler=\"IconRosetteDiscountCheck\"\n            hugeicons=\"CheckmarkBadge02Icon\"\n          />\n          Destructive\n        </Badge>\n        <Badge variant=\"outline\">\n          <IconPlaceholder\n            lucide=\"BadgeCheck\"\n            tabler=\"IconRosetteDiscountCheck\"\n            hugeicons=\"CheckmarkBadge02Icon\"\n          />\n          Outline\n        </Badge>\n        <Badge variant=\"ghost\">\n          <IconPlaceholder\n            lucide=\"BadgeCheck\"\n            tabler=\"IconRosetteDiscountCheck\"\n            hugeicons=\"CheckmarkBadge02Icon\"\n          />\n          Ghost\n        </Badge>\n        <Badge variant=\"link\">\n          <IconPlaceholder\n            lucide=\"BadgeCheck\"\n            tabler=\"IconRosetteDiscountCheck\"\n            hugeicons=\"CheckmarkBadge02Icon\"\n          />\n          Link\n        </Badge>\n      </div>\n    </Frame>\n  )\n}\n\nfunction BadgeWithIconRight() {\n  return (\n    <Frame title=\"Icon Right\">\n      <div className=\"flex flex-wrap gap-2\">\n        <Badge>\n          Default\n          <IconPlaceholder\n            lucide=\"ArrowRightIcon\"\n            tabler=\"IconArrowRight\"\n            hugeicons=\"ArrowRight02Icon\"\n          />\n        </Badge>\n        <Badge variant=\"secondary\">\n          Secondary\n          <IconPlaceholder\n            lucide=\"ArrowRightIcon\"\n            tabler=\"IconArrowRight\"\n            hugeicons=\"ArrowRight02Icon\"\n          />\n        </Badge>\n        <Badge variant=\"destructive\">\n          Destructive\n          <IconPlaceholder\n            lucide=\"ArrowRightIcon\"\n            tabler=\"IconArrowRight\"\n            hugeicons=\"ArrowRight02Icon\"\n          />\n        </Badge>\n        <Badge variant=\"outline\">\n          Outline\n          <IconPlaceholder\n            lucide=\"ArrowRightIcon\"\n            tabler=\"IconArrowRight\"\n            hugeicons=\"ArrowRight02Icon\"\n          />\n        </Badge>\n        <Badge variant=\"ghost\">\n          Ghost\n          <IconPlaceholder\n            lucide=\"ArrowRightIcon\"\n            tabler=\"IconArrowRight\"\n            hugeicons=\"ArrowRight02Icon\"\n          />\n        </Badge>\n        <Badge variant=\"link\">\n          Link\n          <IconPlaceholder\n            lucide=\"ArrowRightIcon\"\n            tabler=\"IconArrowRight\"\n            hugeicons=\"ArrowRight02Icon\"\n          />\n        </Badge>\n      </div>\n    </Frame>\n  )\n}\n\nfunction BadgeWithSpinner() {\n  return (\n    <Frame title=\"With Spinner\">\n      <div className=\"flex flex-wrap gap-2\">\n        <Badge>\n          <Spinner />\n          Default\n        </Badge>\n        <Badge variant=\"secondary\">\n          <Spinner />\n          Secondary\n        </Badge>\n        <Badge variant=\"destructive\">\n          <Spinner />\n          Destructive\n        </Badge>\n        <Badge variant=\"outline\">\n          <Spinner />\n          Outline\n        </Badge>\n        <Badge variant=\"ghost\">\n          <Spinner />\n          Ghost\n        </Badge>\n        <Badge variant=\"link\">\n          <Spinner />\n          Link\n        </Badge>\n      </div>\n    </Frame>\n  )\n}\n\nfunction BadgeAsLink() {\n  return (\n    <Frame title=\"asChild\">\n      <div className=\"flex flex-wrap gap-2\">\n        <Badge asChild>\n          <a href=\"#\">\n            Link{\" \"}\n            <IconPlaceholder\n              lucide=\"ArrowUpRightIcon\"\n              tabler=\"IconArrowUpRight\"\n              hugeicons=\"ArrowUpRightIcon\"\n            />\n          </a>\n        </Badge>\n        <Badge asChild variant=\"secondary\">\n          <a href=\"#\">\n            Link{\" \"}\n            <IconPlaceholder\n              lucide=\"ArrowUpRightIcon\"\n              tabler=\"IconArrowUpRight\"\n              hugeicons=\"ArrowUpRightIcon\"\n            />\n          </a>\n        </Badge>\n        <Badge asChild variant=\"destructive\">\n          <a href=\"#\">\n            Link{\" \"}\n            <IconPlaceholder\n              lucide=\"ArrowUpRightIcon\"\n              tabler=\"IconArrowUpRight\"\n              hugeicons=\"ArrowUpRightIcon\"\n            />\n          </a>\n        </Badge>\n        <Badge asChild variant=\"outline\">\n          <a href=\"#\">\n            Link{\" \"}\n            <IconPlaceholder\n              lucide=\"ArrowUpRightIcon\"\n              tabler=\"IconArrowUpRight\"\n              hugeicons=\"ArrowUpRightIcon\"\n            />\n          </a>\n        </Badge>\n        <Badge asChild variant=\"ghost\">\n          <a href=\"#\">\n            Link{\" \"}\n            <IconPlaceholder\n              lucide=\"ArrowUpRightIcon\"\n              tabler=\"IconArrowRight\"\n              hugeicons=\"ArrowRight02Icon\"\n            />\n          </a>\n        </Badge>\n        <Badge asChild variant=\"link\">\n          <a href=\"#\">\n            Link{\" \"}\n            <IconPlaceholder\n              lucide=\"ArrowUpRightIcon\"\n              tabler=\"IconArrowUpRight\"\n              hugeicons=\"ArrowRight02Icon\"\n            />\n          </a>\n        </Badge>\n      </div>\n    </Frame>\n  )\n}\n\nfunction BadgeLongText() {\n  return (\n    <Frame title=\"Long Text\">\n      <div className=\"flex flex-wrap gap-2\">\n        <Badge variant=\"secondary\">\n          A badge with a lot of text to see how it wraps\n        </Badge>\n      </div>\n    </Frame>\n  )\n}\n\nfunction BadgeCustomColors() {\n  return (\n    <Frame title=\"Custom Colors\">\n      <div className=\"flex flex-wrap gap-2\">\n        <Badge className=\"bg-blue-600 text-blue-50 dark:bg-blue-600 dark:text-blue-50\">\n          Blue\n        </Badge>\n        <Badge className=\"bg-green-600 text-green-50 dark:bg-green-600 dark:text-green-50\">\n          Green\n        </Badge>\n        <Badge className=\"bg-sky-600 text-sky-50 dark:bg-sky-600 dark:text-sky-50\">\n          Sky\n        </Badge>\n        <Badge className=\"bg-purple-600 text-purple-50 dark:bg-purple-600 dark:text-purple-50\">\n          Purple\n        </Badge>\n        <Badge className=\"bg-blue-50 text-blue-700 dark:bg-blue-950 dark:text-blue-300\">\n          Blue\n        </Badge>\n        <Badge className=\"bg-green-50 text-green-700 dark:bg-green-950 dark:text-green-300\">\n          Green\n        </Badge>\n        <Badge className=\"bg-sky-50 text-sky-700 dark:bg-sky-950 dark:text-sky-300\">\n          Sky\n        </Badge>\n        <Badge className=\"bg-purple-50 text-purple-700 dark:bg-purple-950 dark:text-purple-300\">\n          Purple\n        </Badge>\n        <Badge className=\"bg-red-50 text-red-700 dark:bg-red-950 dark:text-red-300\">\n          Red\n        </Badge>\n      </div>\n    </Frame>\n  )\n}\n",
      "type": "registry:example"
    }
  ]
}